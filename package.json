{
  "name": "@fasttime/lint",
  "version": "1.4.2",
  "description": "Universal linter with fasttime presets.",
  "keywords": [
    "eslint",
    "gulp",
    "gulp-plugin",
    "gulpplugin",
    "lint",
    "linter",
    "validate",
    "validation",
    "validator"
  ],
  "homepage": "https://github.com/fasttime/lint",
  "bugs": "https://github.com/fasttime/lint/issues",
  "license": "ISC",
  "author": "Francesco Trotta <ft@fasttime.org> (https://github.com/fasttime)",
  "files": [
    "index.{d.ts,js}",
    "lib/*.js"
  ],
  "types": "index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttime/lint.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "test": "mocha --check-leaks test/**/*.spec.js"
  },
  "dependencies": {
    "@cucumber/gherkin": "22",
    "@fasttime/eslint-plugin": "0.6",
    "@types/eslint": "8",
    "@typescript-eslint/eslint-plugin": "5.8",
    "@typescript-eslint/parser": "5.8",
    "eslint": "8.5",
    "eslint-plugin-node": "11",
    "fancy-log": "1",
    "fast-glob": "3",
    "gulp-tap": "2",
    "merge-stream": "2",
    "plugin-error": "1",
    "typescript": "4.5",
    "vinyl-fs": "3"
  },
  "devDependencies": {
    "ansi-colors": "latest",
    "c8": "latest",
    "gulp": "latest",
    "mocha": "latest",
    "postrequire": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest"
  },
  "peerDependencies": {
    "@types/node": "*"
  }
}
