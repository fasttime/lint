{
  "name": "@fasttime/lint",
  "version": "2.5.1",
  "description": "Universal linter with fasttime presets.",
  "homepage": "https://github.com/fasttime/lint",
  "bugs": "https://github.com/fasttime/lint/issues",
  "license": "ISC",
  "author": "Francesco Trotta <ft@fasttime.org> (https://github.com/fasttime)",
  "files": [
    "index.{d.ts,js}",
    "lib/*.js"
  ],
  "types": "index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttime/lint.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "release": "npm version -m \"Version %s\" --tag-version-prefix=",
    "test": "mocha --check-leaks test/**/*.spec.js"
  },
  "dependencies": {
    "@cucumber/gherkin": "27",
    "@origin-1/eslint-config": "^0.19.0",
    "@types/node": "20",
    "eslint": "^8.46",
    "fancy-log": "2",
    "fast-glob": "3",
    "gulp-tap": "2",
    "merge-stream": "2",
    "plugin-error": "^2.0.1",
    "typescript": "4.9",
    "vinyl-fs": "4"
  },
  "devDependencies": {
    "ansi-colors": "latest",
    "c8js": "latest",
    "gulp": "latest",
    "mocha": "latest",
    "postrequire": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest"
  },
  "engines": {
    "node": ">=20.8"
  }
}
