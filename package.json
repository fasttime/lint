{
  "name": "@fasttime/lint",
  "version": "2.0.0",
  "description": "Universal linter with fasttime presets.",
  "keywords": [
    "eslint",
    "gulp",
    "gulp-plugin",
    "gulpplugin",
    "lint",
    "linter",
    "validate",
    "validation",
    "validator"
  ],
  "homepage": "https://github.com/fasttime/lint",
  "bugs": "https://github.com/fasttime/lint/issues",
  "license": "ISC",
  "author": "Francesco Trotta <ft@fasttime.org> (https://github.com/fasttime)",
  "files": [
    "index.{d.ts,js}",
    "lib/*.js"
  ],
  "types": "index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttime/lint.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "test": "mocha --check-leaks test/**/*.spec.js"
  },
  "dependencies": {
    "@cucumber/gherkin": "24",
    "@origin-1/eslint-config": "^0.7.1",
    "@types/node": "18",
    "eslint": "^8.24",
    "fancy-log": "2",
    "fast-glob": "3",
    "gulp-tap": "2",
    "merge-stream": "2",
    "plugin-error": "2",
    "typescript": "^4.8",
    "vinyl-fs": "3"
  },
  "devDependencies": {
    "ansi-colors": "latest",
    "c8js": "latest",
    "gulp": "latest",
    "mocha": "latest",
    "postrequire": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest"
  },
  "engines": {
    "node": ">=18.1"
  }
}
